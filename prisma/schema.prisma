generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Provided by docker compose
  url      = env("DATABASE_URL")
}

model TouristicDestination {
  id    Int     @id @default(autoincrement())
  name  String  @db.VarChar(255)
  address String  @db.VarChar(255)
  description String @db.Text
  imageUrl String @db.VarChar(2048) @map("image_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  likes TouristicDestinationLikes[]

  @@map("touristic_destinations")
}

model TouristicDestinationLikes {
  id Int @id @default(autoincrement())
  touristicDestinationId Int @map("touristic_destination_id")
  createdAt DateTime @default(now()) @map("created_at")


  destination TouristicDestination @relation(fields: [touristicDestinationId], references: [id], onDelete: Cascade)

  @@map("touristic_destination_likes")
}